<div id="sidebar" class="mdl-layout__drawer-right mdl-color--blue-grey-900 mdl-color-text--blue-grey-50">
    <header class="demo-drawer-header">
    </header>
    <nav class="demo-navigation mdl-navigation mdl-color--blue-grey-800">

        <input type="text" id="siteSearch" placeholder="Search battlesites..." title="Type Query Here">

        <ul id="listed-sites">
            <% for (var ind in sites) { %>
                <li>
                    <a href="#" onClick="selectMarker(<%- ind -%>)">
                        <%- sites[ind].name -%>
                    </a>
                </li>
            <% } %>
        </ul>

        <div class="mdl-layout-spacer"></div>

        <button class="mdl-button mdl-js-button mdl-button--icon">
        <i class="material-icons">help-outline</i>
        <div class="mdl-tooltip" data-mdl-for="tt1">
            Follow
        </div>
        </button>
    </nav>
</div>
<div class="mdl-layout__obfuscator-right"></div>

<script>

var searchBar = document.getElementById("siteSearch");
var siteList = document.getElementById("listed-sites");

searchBar.addEventListener("keyup", function() {filterList(this, siteList)} );

function filterList(input, list) {
    var filter = input.value.toUpperCase();
    var items = list.getElementsByTagName("li");

    for (var i = 0; i < items.length; i++) {
        if (items[i].innerHTML.toUpperCase().indexOf(filter) > -1) {
            items[i].style.display = "";
        } else {
            items[i].style.display = "none";
        }
    }
}

</script>