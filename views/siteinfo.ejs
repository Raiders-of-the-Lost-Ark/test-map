<% var edit = false; %>
<% var imgDir = "images/"; %>
<% var pic = imgDir + data.images; %>
<% var boxId = "img" + 1; %> 

<div class="view-mode <% if (!edit) { %> active <% } %>">
    <% if (data.images && data.images.length != "") { %>   
        <a href="#" onclick="showLightbox('<%= boxId %>')">
            <img class="sidebar-image" src="<%= pic %>" style="width:100%" />
        </a>
    <% } %>
    <div class="sidebar-content">
        <h3 class="siteInfo_name"><%= data.name %></h3>
        <p class="siteInfo_paragraph"><%= data.misc %></p>
    </div>
</div>

<div class="edit-mode <% if (edit) { %> active <% } %> ">
    <% if (data.images && data.images.length != "") { %>   
        <a class="image-container" href="#" onclick="showLightbox('<%= boxId %>')">
            <img src="<%= pic %>" style="width:100%" />
            <div class="image-overlay">
                <h3>Image</h3>
            </div>
        </a>
    <% } %>
    <input name="name" value="<%= data.name %>" /> <br />
    <ul>
        <li><input name="misc" value="<%= data.misc %>" /></li>
    </ul>
    <br />
</div>

<div id="admin-buttons">
    <div class="mdl-layout-spacer"></div>
    <!--<form id="editForm" action="/editsite" method="GET">
        <input hidden="true" name="idkey" value=<%= data._id %> type="text"></input>
        --><button id="siteEditButton" onclick="toggleSiteEdit(<%= !edit %>)" class="mdl-button mdl-js-button mdl-button--raised editButton">EDIT</button>
    <!--</form>-->
    <div class="mdl-layout-spacer"></div>
    <form id="deleteForm" action="/deletesite" method="POST">
        <input hidden="true" name="idkey" value=<%= data._id %> type="text"></input>
        <button class="mdl-button mdl-js-button mdl-button--raised deleteButton" onclick="deleteItem()">DELETE</button>
    </form>
</div>

